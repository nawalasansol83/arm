{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment":{
            "type": "string"
        },
        "regionCode":{
            "defaultValue": "CaC",
            "type": "string"
        },        
        "webappName":{
            "type": "string"
        },
         "webappNameDistributedEnv":{
            "type": "string"
        },
        "webappNameDistributedEnvName":{
            "type": "array",
            "defaultValue": [""]
        },
        "storageNames": {
          "type": "array",
          "defaultValue": [
            "contoso",
            "fabrikam",
            "coho"
          ]
      }
    },
    "variables": {
        "Var_webappNameDistributedEnvName": "[split(parameters('webappNameDistributedEnvName'), ',')]"
         "copy": [
            {
                "name": "v_webappNameDistributedEnvName",
                "count": "[parameters('webappNameDistributedEnvName')]",
                "input": "[concat('WebApp-Cac-RD-',parameters('webappName'), variables('Var_webappNameDistributedEnvName')[copyIndex('v_webappNameDistributedEnvName')])]"
            }
        ],
        // "v_webappNameDistributedEnvName":{
        //        "copy": [
        //     {
        //         "name": "v_webappNameDistributedEnvName",
        //         "count": "[length(parameters('webappNameDistributedEnvName'))]",
        //         "input": "[concat('WebApp-Cac-RD-',parameters('webappName'), parameters('webappNameDistributedEnvName')[copyIndex('v_webappNameDistributedEnvName')])]"
        //     }
        //  ]
        // },
        "v_skuCode":"P1v3",
        "v_hostingPlanName":"[concat('HostingPlan-',parameters('regionCode'),'-',parameters('environment'),'-',variables('v_skuCode'))]",
        "v_currentStack":"dotnetcore",
        "v_phpVersion":"OFF",
        "v_hostingEnvironment":"",
        "v_alwaysOn":"true",
        //"v_errorLink":"[concat('https://', variables('v_webappName'),'.scm.azurewebsites.net/detectors?type=tools&name=eventviewer')]",
        //"v_webappName":"[concat('WebApp-',parameters('regionCode'),'-',parameters('environment'),'-',parameters('webappName'))]",
        "v_vnetName":"[concat('VNET-',parameters('regionCode'),'-',parameters('environment'))]",
        "v_vnetRG":"[concat('RG-',parameters('regionCode'),'-',parameters('environment'),'-Network')]",
        "v_virtualnetworkdId":"[resourceId(variables('v_vnetRG'),'Microsoft.Network/virtualNetworks',variables('v_vnetName'))]"
        //"v_networkConnection":"[concat(variables('v_webappName'), '/', uniquestring(variables('v_webappName')),'MiddleTier-Second')]"
    },
    "resources": [    
        
        
        
    ],
    "outputs": {
        "arrayResult": {
            "type": "array",
            "value": "[variables('v_webappNameDistributedEnvName')]"
        }
  }
