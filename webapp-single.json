{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment":{
            "type": "string"
        },
        "regionCode":{
            "defaultValue": "CaC",
            "type": "string"
        },        
        "webappName":{
            "type": "string"
        },
         "webappNameDistributedEnv":{
            "type": "string"
        },
        "webappNameDistributedEnvName":{
            "type": "array",
            "defaultValue": [""]
        },
        "storageNames": {
          "type": "string",
          "defaultValue": "ssdfsdf,sdfsdf,sdfdsfdsf,sdfdsfsdfdsf,dgdfg"
      }
    },
    "variables": {
        "ipaddresses": "[split(parameters('defaultValue'), ',')]",
        "copy": [
            {
            "name": "myVariable",
            "count": "[length(variables('ipaddresses'))]",
            "input": {
                "ipAddress": "[variables('ipaddresses')[copyIndex('myVariable')]]"
                }
            }
        ]
        
    },
    "resources": [    
        
        
        
    ],
    "outputs": {
       
  }
