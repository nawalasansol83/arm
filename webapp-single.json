{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment":{
            "type": "string"
        },
        "regionCode":{
            "defaultValue": "CaC",
            "type": "string"
        },        
        "webappName":{
            "type": "string"
        },
         "webappNameDistributedEnv":{
            "type": "string"
        },
        "webappNameDistributedEnvName":{
            "type": "array",
            "defaultValue": [""]
        },
        "storageNames": {
          "type": "string",
          "defaultValue": "ssdfsdf,sdfsdf,sdfdsfdsf,sdfdsfsdfdsf,dgdfg"
      }
    },
    "variables": {
        "Var_webappNameDistributedEnvName": "[split(parameters('storageNames'), ',')]"
         "copy": [
            {
                "name": "v_webappNameDistributedEnvName",
                "count": "[length(variables('Var_webappNameDistributedEnvName'))]",
                "input": {
                      "finalValue"  :"[concat('WebApp-Cac-RD-',parameters('webappName'), variables('Var_webappNameDistributedEnvName')[copyIndex('v_webappNameDistributedEnvName')])]"
                } 
                
            }
        ],
        
    },
    "resources": [    
        
        
        
    ],
    "outputs": {
        "arrayResult": {
            "type": "array",
            "value": "[variables('v_webappNameDistributedEnvName')]"
        }
  }
